<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:DMC.UI" x:Class="DMC.UI.ProgressWheel" 
             mc:Ignorable="d" 
             Width="Auto"
             Height="Auto">
    
	<Grid Width="200" Height="200">
        
        <ui:ProgressWheelWedge Angle="0"   BeginTime="0:0:0.0"   Color="#95221F" />
        <ui:ProgressWheelWedge Angle="45"  BeginTime="0:0:0.125" Color="#95221F" />
        <ui:ProgressWheelWedge Angle="90"  BeginTime="0:0:0.25"  Color="#71957D" />
        <ui:ProgressWheelWedge Angle="135" BeginTime="0:0:0.375" Color="#71957D" />
        <ui:ProgressWheelWedge Angle="180" BeginTime="0:0:0.5"   Color="#888D94" />
        <ui:ProgressWheelWedge Angle="225" BeginTime="0:0:0.625" Color="#888D94" />
        <ui:ProgressWheelWedge Angle="270" BeginTime="0:0:0.75"  Color="#4375B9" />
        <ui:ProgressWheelWedge Angle="315" BeginTime="0:0:0.875" Color="#4375B9" />
		
        <Grid.RenderTransform>
            <RotateTransform CenterX="100" CenterY="100" Angle="22.5" />
        </Grid.RenderTransform>
	</Grid>
</UserControl>
