<Window x:Class="DMC.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:DMC.UI"
        Title="About" SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        
        <StackPanel>
            <StackPanel>
                <Border BorderBrush="SteelBlue" BorderThickness="5" Margin="5" Padding="5">
                    <StackPanel DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=my:AboutWindow, AncestorLevel=1}}">
                        <TextBlock Text="Application: " Margin="5" FontWeight="Bold"/>
                        <TextBlock Text="{Binding AppName}" Margin="5"/>
                        <TextBlock Text="Version: " Margin="5" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Version}" Margin="5"/>
                        <TextBlock Text="{Binding Copyright}" Margin="5,40,5,5"/>
                    </StackPanel>
                </Border>
                <Button Name="OK" Content="OK" IsDefault="True" Height="30" Width="100" Margin="20" Click="OK_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
